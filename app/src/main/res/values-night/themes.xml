<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HolidayApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_darker</item>
        <item name="colorOnPrimary">@color/color_on</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent_darker</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--        <item name="android:windowBackground">@drawable/ic_splash</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorControlNormal">@color/color_light_text</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/color_light_text</item>
        <item name="android:textColorHint">@color/color_light_text</item>
        <item name="android:textColor">@color/color_text</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustNothing</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonFillAppearance" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/burnt_orange</item>
        <item name="android:padding">@dimen/margin_top_medium_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

</resources>